{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    // "verbatimModuleSyntax": true,
    "resolveJsonModule": false,
    "declaration": true,
    "emitDeclarationOnly": false
  },
  "include": [
    "src/**/*"
  ]
}